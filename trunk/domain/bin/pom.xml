<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<artifactId>kniffel</artifactId>
		<groupId>de.fh_fortmund.cw</groupId>
		<version>1.0</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>de.fh_fortmund.cw.kniffel</groupId>
	<artifactId>domain</artifactId>
	<packaging>ear</packaging>
	<name>domain</name>
	<version>1.0</version>
	<url>http://maven.apache.org</url>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<archive>
						<addMavenDescriptor>false</addMavenDescriptor>
					</archive>
					<version>5</version>
					<displayName>Kniffel EAR</displayName>
					<description></description>
					<modules>
						<ejbModule>
							<groupId>${groupId}</groupId>
							<artifactId>model</artifactId>
							<bundleFileName>${pom.parent.artifactId}-model-${version}.jar</bundleFileName>
						</ejbModule>
						<ejbModule>
							<groupId>${groupId}</groupId>
							<artifactId>integration</artifactId>
							<bundleFileName>${pom.parent.artifactId}-integration-${version}.jar</bundleFileName>
						</ejbModule>
						<ejbModule>
							<groupId>${groupId}</groupId>
							<artifactId>service</artifactId>
							<bundleFileName>${pom.parent.artifactId}-service-${version}.jar</bundleFileName>
						</ejbModule>
						<webModule>
							<groupId>${groupId}</groupId>
							<artifactId>webclient-gwt</artifactId>
							<contextRoot>/</contextRoot>
							<bundleFileName>
								${pom.parent.artifactId}-webclient-${version}.war
							</bundleFileName>
						</webModule>
					</modules>
					<archive>
						<addMavenDescriptor>false</addMavenDescriptor>
					</archive>
					<finalName>${pom.parent.artifactId}</finalName>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
	</dependencies>
</project>
